import gui.Simulable;
import gui.GUISimulator;
import gui.Rectangle;
import java.awt.Color;

public class EssaimSimulator extends CelluleSimulator implements Simulable {

    private Essaim essaim;
    
    public Cellule_ImmigSimulator(int taillex, int tailley,int n) {
	super(taillex,tailley,n);
	this.cells_immig = new Cellule_Immig(taillex,tailley,n);
    }

    public Essaim getEssaim() {
	return this.essaim;
    }
    
    public void Affiche() {
	
		this.getGUI().reset();
	
		for each agent
			     Color coul = agent.couleur;
				this.getGUI().addGraphicalElement(new Triangle(agent.points,coul,coul,10,10));
	    	}
		}
    }

    @Override
     public void next() {
	 	this.essaim.evolution();
	 	this.Affiche();
     }

        @Override
    public void restart() {
    	this.essaim.reInit();
    	this.Affiche();
    }
}
