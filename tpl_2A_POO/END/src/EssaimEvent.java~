import gui.GUISimulator;


public class EssaimEvent extends Event {
    private Essaim essaim;
    private int taillex;
    private int tailley;
    private GUISimulator gui;
    
    public EssaimEvent (long date, Essaim essaim,int taillex, int tailley,GUISimulator gui){
	super(date);
	this.essaim = essaim;
	this.taillex = taillex;
	this.tailley = tailley;
	this.gui = gui;
    }

    public Essaim getEssaim(){
	return this.essaim;
    }

    @Override
    public void execute() {
        this.essaim.next(taillex, tailley, gui);
	this.essaim.Affiche(taillex,tailley,gui);
    }
}
